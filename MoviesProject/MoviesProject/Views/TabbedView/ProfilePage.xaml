<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MoviesProject.Views.TabbedView.ProfilePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <Grid Padding="10,50,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Frame
                Grid.Row="0"
                Padding="2"
                BackgroundColor="Transparent"
                BorderColor="{StaticResource PrimaryColor}"
                CornerRadius="360"
                HeightRequest="100"
                HorizontalOptions="CenterAndExpand"
                IsClippedToBounds="True"
                WidthRequest="100">
                <Image Aspect="Fill" Source="ic_avater" />
            </Frame>
            <Label
                Grid.Row="1"
                FontSize="Large"
                HorizontalTextAlignment="Center"
                Style="{StaticResource TitleLabelStyle}"
                Text="Thaer Mosa" />
            <Label
                Grid.Row="2"
                HorizontalTextAlignment="Center"
                Style="{StaticResource OverlayTitleLabelStyle}"
                Text="Premium"
                TextColor="{StaticResource PrimaryColor}" />

            <StackLayout
                Grid.Row="3"
                Padding="25"
                HorizontalOptions="StartAndExpand"
                Orientation="Horizontal"
                Spacing="10">
                <CollectionView
                    x:Name="ImageListView"
                    SelectionChanged="SelectHandler"
                    SelectionMode="Single">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical" VerticalItemSpacing="10" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="10" RowSpacing="10">
                                <StackLayout
                                    HorizontalOptions="StartAndExpand"
                                    Orientation="Horizontal"
                                    Spacing="10">
                                    <Image Source="{Binding ImagePage}" />
                                    <Label Style="{StaticResource OverlayTitleLabelStyle}" Text="{Binding NamePage}" />
                                </StackLayout>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>